      "get": {
        "tags": ["Monsters"],
        "summary": "Fetch user's favorite monsters",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "User id"
          }
        ],
        "responses": {
          "200": {
            "description": "This service allows you to search a user's favorite monsters by user id"
